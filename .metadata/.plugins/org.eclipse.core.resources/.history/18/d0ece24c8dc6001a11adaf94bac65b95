package io.microservice.constultation.service;

import java.util.List;
import java.util.Optional;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import io.microservice.constultation.client.DiagnosisServiceClient;
import io.microservice.constultation.client.DoctorServiceClient;
import io.microservice.constultation.client.PatientServiceClient;
import io.microservice.constultation.dto.ConsultationDto;
import io.microservice.constultation.model.Consultation;
import io.microservice.constultation.model.Diagnosis;
import io.microservice.constultation.model.Doctor;
import io.microservice.constultation.model.Patient;
import io.microservice.constultation.repo.ConsultationDao;

@Service
public class ConsultationServiceImp implements ConsultationService{
	
	@Autowired
	private ConsultationDao dao;
	
	@Autowired
	private PatientServiceClient patientService;
	
	@Autowired
	private DoctorServiceClient doctorService;
	
	@Autowired
	private DiagnosisServiceClient diagnosisService;

	
	@Override
	public Optional<Consultation> addConsultation(ConsultationDto cons) {
		Consultation consultation = new Consultation();
		Patient patient = patientService.getPatientDetails(cons.getPatientPhno());
		Doctor doctor = doctorService.getDoctorDetalis(cons.getDoctorPhno());
		Diagnosis diagnosis = diagnosisService.getDiagnosisDetails(cons.getDiagnosisId());
		consultation.setPatient(patient);
		consultation.setDoctor(doctor);
		consultation.setDiagnosis(diagnosis);
		return Optional.of(dao.save(consultation));
	}
	
	@Override
	public Optional<Consultation> getConsultation(int id) {
		return dao.findById(id);
	}

	@Override
	public List<Consultation> getAllConsultation() {
		return dao.findAll();
	}
}
