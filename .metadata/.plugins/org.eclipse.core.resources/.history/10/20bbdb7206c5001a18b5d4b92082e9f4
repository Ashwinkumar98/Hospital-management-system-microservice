package io.microservice.constultation.controller;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.JoinColumn;
import javax.persistence.OneToOne;
import javax.persistence.Table;

import io.microservice.constultation.model.Doctor;
import io.microservice.constultation.model.Patient;
import lombok.Data;
import lombok.NoArgsConstructor;

@Data
@NoArgsConstructor
@Entity
@Table(name="constultation")
public class Constultation {
	
	@Id
	@GeneratedValue(strategy = GenerationType.IDENTITY)
	@Column(name = "constultation_id")
	private int id;
	@OneToOne
	@JoinColumn(name = "doctor_id")
	private Doctor doctor;
	@OneToOne	@JoinColumn(name="patient_id")
	private Patient patient;
}
